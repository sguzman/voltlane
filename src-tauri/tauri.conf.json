{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Voltlane",
  "version": "0.1.0",
  "identifier": "com.voltlane.app",
  "build": {
    "beforeDevCommand": "pnpm --dir ui run dev --host",
    "beforeBuildCommand": "pnpm --dir ui run build",
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Voltlane",
        "width": 1480,
        "height": 920,
        "minWidth": 1080,
        "minHeight": 680
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "res/soundfonts/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
